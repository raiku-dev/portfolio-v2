---
import Head from '@sections/Head.astro';
import Header from '@sections/Header.astro';
import Footer from '@sections/Footer.astro';

const { title, description, ogImgSrc, ogImgAlt } = Astro.props;
---

<html lang="en">
	<Head {title} {description} {ogImgSrc} {ogImgAlt} />

	<body>
		<Header />

		<main>
			<slot />
		</main>

		<Footer />
	</body>
</html>

<style lang="scss" is:global>
	@import 'modern-normalize/modern-normalize.css';
	@font-face {
		font-family: 'Victor Mono';
		font-style: normal;
		font-weight: 100 900;
		src: url('/fonts/vm.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Victor Mono italic';
		font-style: italic;
		font-weight: 100 900;
		src: url('/fonts/vm-i.woff2') format('woff2');
	}
	@font-face {
		font-family: 'JetBrains Mono';
		font-style: normal;
		font-weight: 100 900;
		src: url('/fonts/jb.woff2') format('woff2');
	}
	@font-face {
		font-family: 'JetBrains Mono';
		font-style: italic;
		font-weight: 100 900;
		src: url('/fonts/jb-i.woff2') format('woff2');
	}

	// Animation
	@keyframes blink-animation {
		0% {
			opacity: 1;
		}
		50% {
			opacity: 1;
		}
		51% {
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}

	.cursor {
		display: inline-block;
		width: 20px;
		height: 0.9em;
		background-color: var(--white);
		transform: translateY(0.1em);
		animation: blink-animation 1s infinite;
	}

	// Styles
	:root {
		// Paddings and sizes
		--section-padding: 80px;
		--max-width: 1280px;
		--header-height: 80px;

		// Colors
		--primary: #bb9000;
		--text: #cccccc;
		--black: #111111;
		--white: #ffffff;
		--background: #111111;
		--header-bg: #111111aa;
		--lightgray: #aaaaaa;
		--gray: #888888;
		--darkgray: #272727;
		--red: #ff5060;
		--green: #66cc55;

		@include view-tablet {
			--section-padding: 80px 40px;
		}

		@include view-mobile-s {
			--section-padding: 40px 20px;
			font-size: 14px;
		}
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-margin-top: 80px;
	}

	html {
		font-size: 100%;
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		@include copy;
	}

	body {
		background-color: var(--background);
		min-height: 100vh;
		min-height: 100svh;

		*:focus {
			outline: none;
		}

		*:focus-visible {
			outline: 2px dotted var(--yellow);
		}
	}

	a {
		text-decoration: none;
	}

	button {
		cursor: pointer;
		border: none;
		border-radius: 0;
		appearance: none;
		background-color: transparent;
	}

	.main-button {
		@include font-heading;
		display: flex;
		align-items: center;
		gap: 8px;
		padding: 10px 16px 9px;
		border-radius: 8px;
		border: 1px solid var(--primary);
		color: var(--primary);
		transition: 0.2s;
		line-height: 1;

		@include hover {
			color: var(--white);
			border-color: var(--white);
		}
	}

	h1 {
		@include h1;
	}

	h2 {
		@include h2;
	}

	.section-heading {
		font-weight: 900;
		margin-bottom: 40px;
	}

	h3 {
		@include h3;
	}

	h4 {
		@include h4;
	}

	h5 {
		@include h5;
	}

	h6 {
		@include h6;
	}

	p,
	a,
	li {
		@include copy;
	}

	small {
		@include smallText;
	}

	strong {
		font-weight: bold;
		text-shadow: 0 0 1px var(--white);
		color: var(--white);
	}

	main {
		width: 100%;
		height: 100%;

		@include ol;
		@include ul;
	}

	section,
	article {
		width: 100%;
		max-width: var(--max-width);
		margin: 0 auto;
		padding: var(--section-padding);
	}

	article {
		max-width: 1000px;

		> .cover-container {
			width: 100%;

			img {
				width: 100%;
				height: auto;
				border-radius: 8px;
				box-shadow: 0 4px 10px #00000055;
			}
		}

		> * + * {
			margin-top: 1.25em;

			&:first-child {
				margin-top: 0;
			}
		}

		h1,
		h2,
		h3,
		h4,
		h5 {
			margin: 2em 0 1em;
			border-bottom: 1px solid var(--primary);
			width: fit-content;

			&:first-child {
				margin-top: 0;
				margin-bottom: 0;
			}
		}

		.categories {
			display: flex;
			flex-wrap: wrap;
			gap: 12px;

			.category {
				line-height: 1;
				display: flex;
				@include font-heading;
				color: var(--primary);
				text-decoration: underline;
				transition: 0.2s;

				&::before {
					content: '#';
				}

				@include hover {
					color: var(--white);
					text-decoration-color: var(--white);
				}
			}
		}

		blockquote {
			padding: 20px;
			font-style: italic;
			background-color: var(--darkgray);
			border-left: 3px solid var(--primary);
			border-radius: 0 8px 8px 0;
			margin: 2em 0;
		}
	}

	// Toastify styles
	body .toastify {
		display: flex;
		gap: 8px;

		.toastify-avatar {
			height: 1rem;
			width: auto;
			margin: 0;
			transform: translateY(25%);
		}

		.toast-close {
			position: absolute;
			right: 0;
			top: 0;
			transform: translateY(-50%) translateX(50%);
			cursor: pointer;
			width: 1rem;
			height: 1rem;
			background-color: var(--white);
			border: 2px solid var(--yellow);
			opacity: 1;
			border-radius: 50%;
			width: 1.5rem;
			height: 1.5rem;
			appearance: none;
			font-size: 0;

			&::before {
				content: 'x';
				position: absolute;
				left: 0;
				top: 0;
				width: 100%;
				height: 100%;
				border-radius: 50%;
				font-size: 1rem;
				color: var(--yellow);
				line-height: 1.1;
			}
		}
	}
</style>
