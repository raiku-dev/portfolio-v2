</section>

<style lang="scss">
	.tech-stack {
		h3 {
			margin-bottom: 20px;
			@include h4;
		}

		.tech-container {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 8px;
			margin-bottom: 40px;

			@include view-mobile-m {
				display: flex;
				flex-wrap: wrap;
			}

			&:last-child {
				margin-bottom: 0;
			}

			.tech {
				display: flex;
				gap: 12px;
				padding: 8px 8px 6px;
				background-color: rgba($color: #333, $alpha: 0.4);
				border-radius: 4px;
				align-items: center;
				position: relative;
				overflow: hidden;
				box-shadow: 0 2px 4px #00000035;

				:global(svg) {
					width: 24px;
					height: 24px;
				}

				:global(svg:nth-child(2)) {
					z-index: 0;
					position: absolute;
					filter: blur(20px) saturate(4);
					transform: scale(8);
				}

				:global(svg:first-child) {
					z-index: 1;
				}

				@include view-mobile-m {
					:global(svg) {
						width: 28px;
						height: 28px;
					}
				}

				p {
					z-index: 2;
					@include font-heading;
					font-weight: 400;
					text-transform: none;

					@include view-mobile-m {
						display: none;
					}
				}
			}
		}
	}
</style>
