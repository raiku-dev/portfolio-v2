	<div class="tech-container animate bottom">
		<div class="tech">
			<Linux />
			<Linux />
			<p>Linux</p>
		</div>
		<div class="tech">
			<Docker />
			<Docker />
			<p>Docker</p>
		</div>
		<div class="tech">
			<GhActions />
			<GhActions />
			<p>GitHub Actions</p>
		</div>
		<div class="tech">
			<GitHub />
