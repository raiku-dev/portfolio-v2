---
import Head from './Head.astro';
import Header from './Header.astro';

const { title, description, ogImgSrc, ogImgAlt } = Astro.props;
---

<html lang="en">
	<Head {title} {description} {ogImgSrc} {ogImgAlt} />

	<body>
		<Header />

		<main>
			<slot />
		</main>
	</body>
</html>

<style lang="scss" is:global>
	@import 'modern-normalize/modern-normalize.css';
	@font-face {
		font-family: 'Victor Mono';
		font-style: normal;
		font-weight: 100 900;
		src: url('/fonts/vm.woff2') format('woff2');
	}
	@font-face {
		font-family: 'Victor Mono';
		font-style: italic;
		font-weight: 100 900;
		src: url('/fonts/vm-i.woff2') format('woff2');
	}
	@font-face {
		font-family: 'JetBrains Mono';
		font-style: normal;
		font-weight: 100 900;
		src: url('/fonts/jb.woff2') format('woff2');
	}
	@font-face {
		font-family: 'JetBrains Mono';
		font-style: italic;
		font-weight: 100 900;
		src: url('/fonts/jb-i.woff2') format('woff2');
	}

	:root {
		// Paddings and sizes
		--section-padding: 80px;
		--max-width: 1280px;
		--header-height: 80px;

		// Colors
		--primary: #eecc00;
		--secondary: #bb9000;
		--text: #dddddd;
		--black: #111111;
		--white: #ffffff;
		--background: #111111;
		--header-bg: #111111aa;
		--lightgray: #bbbbbb;
		--gray: #888888;
		--darkgray: #555555;
		--red: #ff5060;
		--green: #66cc55;

		@include view-tablet {
			--section-padding: 80px 40px;
		}

		@include view-mobile-s {
			--section-padding: 40px 20px;
			font-size: 14px;
		}
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-size: 100%;
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		@include copy;
	}

	body {
		background-color: var(--background);
		min-height: 100vh;
		min-height: 100svh;

		*:focus {
			outline: none;
		}

		*:focus-visible {
			outline: 2px dotted var(--yellow);
		}
	}

	a {
		text-decoration: none;

		&:visited {
			color: var(--text);
		}
	}

	button {
		cursor: pointer;
		border: none;
		border-radius: 0;
		appearance: none;
		background-color: transparent;
	}

	h1 {
		@include h1;
	}

	h2 {
		@include h2;
	}

	h3 {
		@include h3;
	}

	h4 {
		@include h4;
	}

	h5 {
		@include h5;
	}

	h6 {
		@include h6;
	}

	p,
	a {
		@include copy;
		font-weight: 800;
	}

	small {
		@include smallText;
	}

	main {
		width: 100%;
		height: 100%;

		@include ol;
		@include ul;
	}

	section {
		width: 100%;
		max-width: var(--max-width);
		margin: 0 auto;
		padding: var(--section-padding);
	}

	// Toastify styles
	body .toastify {
		display: flex;
		gap: 8px;

		.toastify-avatar {
			height: 1rem;
			width: auto;
			margin: 0;
			transform: translateY(25%);
		}

		.toast-close {
			position: absolute;
			right: 0;
			top: 0;
			transform: translateY(-50%) translateX(50%);
			cursor: pointer;
			width: 1rem;
			height: 1rem;
			background-color: var(--white);
			border: 2px solid var(--yellow);
			opacity: 1;
			border-radius: 50%;
			width: 1.5rem;
			height: 1.5rem;
			appearance: none;
			font-size: 0;

			&::before {
				content: 'x';
				position: absolute;
				left: 0;
				top: 0;
				width: 100%;
				height: 100%;
				border-radius: 50%;
				font-size: 1rem;
				color: var(--yellow);
				line-height: 1.1;
			}
		}
	}
</style>
