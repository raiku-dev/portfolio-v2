{
	"extends": "astro/tsconfigs/strictest",
	"include": [
		".astro/types.d.ts",
		"**/*"
	],
	"exclude": [
		"dist"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"types": [
			"unplugin-icons/types/astro"
		],
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@sections/*": [
				"src/sections/*"
			]
		}
	}
}
